	fpath       	./al.save
	read_S      	False 			# Projections are read orthogonal, If non-orthogonality is required, read overlaps
	shift_type  	1	    		# Shifting algorithm: 0 = 2013, 1 = 2016, 2 = no shift
	shift       	5.0		    	# Shift amount (in eV)
	pthr        	0.9			    # Projectability threshold
	do_comparison 	False			# compare original and filtered eigenvalues (input mesh)
	double_grid	    True			# dense grid from fft interpolation
	do_bands	    True			# compute bands
	onedim		    False			# bands along a single line in the BZ
	do_dos		    True			# compute dos
	delta		    0.150			# gaussian spreading for dos calculation
	do_spin_orbit	False			# compute spin orbit Hamiltonian within the magnetic force theorem
	nfft123		    52 52 52   	    # zero padding dimensions
	ibrav		    2	    		# Bravais lattice identifier (from QE) - for bands path
	dkres		    0.05	    	# k resolution along the bands path
