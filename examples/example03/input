	fpath       	./bi.save
	readOvlps      	False 			# Projections are read orthogonal, If non-orthogonality is required, read overlaps
	shift_type  	1			    # Shifting algorithm: 0 = 2013, 1 = 2016, 2 = no shift
	shift       	5.0			    # Shift amount (in eV)
	pthr        	0.9			    # Projectability threshold
	do_comparison 	False			# compare original and filtered eigenvalues (input mesh)
	double_grid	    True			# dense grid from fft interpolation
	do_bands	    True			# compute bands
	onedim		    False			# bands along a single line in the BZ
	do_dos		    False			# compute dos
	delta		    0.100			# gaussian spreading for dos calculation
	do_spin_orbit	True			# compute spin orbit Hamiltonian in first order perturbation theory

    theta           0.0             # Polar angle in degrees
    phi             0.0             # Azimuthla angle in degrees

    lambda_p        1.5             # p-states soc strengh per species     
    lambda_d        0.0             # d-states soc strengh per species
    
    Boltzmann      False 
    epsilon        False
    nfft123		24 24 24 		    # zero padding dimensions
	ibrav		    3	    		# Bravais lattice identifier (from QE) - for bands path
	dkres		    0.005	    	# k resolution along the bands path
